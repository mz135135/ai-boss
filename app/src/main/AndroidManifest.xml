<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" />
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AIAutomation">
        
        <!-- 新UI界面（默认启动） -->
        <activity
            android:name=".ui.NewMainActivity"
            android:exported="true"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- 旧UI界面（备用） -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.AIAutomation" />
        
        <activity
            android:name=".ui.ChatActivity"
            android:exported="false"
            android:theme="@style/Theme.AIAutomation" />

        <activity
            android:name=".ui.LogsActivity"
            android:exported="false"
            android:theme="@style/Theme.AIAutomation" />

        <activity
            android:name=".ui.ExecRecordsActivity"
            android:exported="false"
            android:theme="@style/Theme.AIAutomation" />

        <activity
            android:name=".ui.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.AIAutomation" />
        
        <service
            android:name=".service.MyAccessibilityService"
            android:label="Boss助手"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>
        
        <service
            android:name=".service.FloatingWindowService"
            android:foregroundServiceType="dataSync"
            android:enabled="true"
            android:exported="false" />
        
        <service
            android:name=".service.ScreenCaptureService"
            android:foregroundServiceType="mediaProjection"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name=".service.AutomationService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
    </application>

</manifest>
