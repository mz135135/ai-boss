<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="#1A1F2E"
    android:alpha="0.5">
    
    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#1A1F2E">
        
        <!-- 第一行：步骤和状态 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <!-- 状态指示器 -->
            <View
                android:id="@+id/statusIndicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@android:drawable/presence_online"
                android:backgroundTint="#10B981"/>
            
            <!-- 步骤数 -->
            <TextView
                android:id="@+id/tvStepCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/50"
                android:textSize="11sp"
                android:textColor="#8B92A8"
                android:textStyle="normal"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="6dp"
                android:fontFamily="monospace"/>
            
            <!-- 状态文本 -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="执行中..."
                android:textSize="12sp"
                android:textColor="#E2E8F0"
                android:maxLines="1"
                android:maxWidth="140dp"
                android:ellipsize="marquee"
                android:singleLine="true"/>
        </LinearLayout>
        
        <!-- AI思考过程显示区域 -->
        <TextView
            android:id="@+id/tvAIReasoning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="10sp"
            android:textColor="#94A3B8"
            android:maxLines="3"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:layout_marginTop="6dp"
            android:visibility="gone"/>
        
        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2D3748"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"/>
        
        <!-- 控制按钮行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="4dp">
            
            <!-- 暂停/继续按钮 -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#2D3748">
                <ImageButton
                    android:id="@+id/btnPause"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_media_pause"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerInside"
                    android:tint="#FBBF24"
                    android:padding="6dp"
                    android:contentDescription="暂停/继续"/>
            </androidx.cardview.widget.CardView>
            
            <!-- 停止按钮 -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#2D3748">
                <ImageButton
                    android:id="@+id/btnStop"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_delete"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerInside"
                    android:tint="#EF4444"
                    android:padding="6dp"
                    android:contentDescription="停止"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
